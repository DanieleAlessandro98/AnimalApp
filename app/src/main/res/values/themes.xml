<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- TODO qui ci sono tutti i colori inseriti nelle view in 'light' mode, in base al logo modifichiamo questi-->
    <style name="Theme.AppCompat.Light.NoActionBar.AnimalApp">
        <!-- Primary gradient background container -->
        <item name="colorPrimary">@color/application_color</item>
        <!-- Secondary gradient background container -->
        <item name="colorOnPrimary">@color/on_application_color</item>
        <!-- Contrast color for smaller item -->
        <item name="colorPrimaryVariant">@color/light_main_green</item>
        <!-- Primary Contrast color for important item(button, bar, ecc) -->
        <item name="colorAccent">@color/main_green</item>

        <!-- Secondary Contrast color for important item(button pressed, bar pressed, ecc) -->
        <item name="colorSecondary">@color/dark_main_green</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorAccent</item>
        <!-- Error color -->
        <item name="errorShown">@color/red</item>
        <!-- Correct color -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>
</resources>